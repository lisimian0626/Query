<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    >
    <TextView
        android:id="@+id/item_duty_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:background="@drawable/text_bg_stroke"
        />
    <TextView
        android:id="@+id/item_duty_dutyID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/text_bg_stroke"
        />
    <TextView
        android:id="@+id/item_duty_startTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:background="@drawable/text_bg_stroke"
        />
    <TextView
        android:id="@+id/item_duty_endTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@drawable/text_bg_stroke"
        />
    <TextView
        android:id="@+id/item_duty_theoryQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/text_bg_stroke"
        />
    <TextView
        android:id="@+id/item_duty_sumQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@drawable/text_bg_stroke"
        />
    <TextView
        android:id="@+id/item_duty_sellQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/text_bg_stroke"
        />
    <TextView
        android:id="@+id/item_duty_cardQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/text_bg_stroke"
        />
    <TextView
        android:id="@+id/item_duty_accountQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/text_bg_stroke"
        />
    <TextView
        android:id="@+id/item_duty_otherQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/text_bg_stroke"
        />
    <TextView
        android:id="@+id/item_duty_diffQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/text_bg_stroke"
        />
    <TextView
        android:id="@+id/item_duty_dutyName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/text_bg_stroke"
        />
    <TextView
        android:id="@+id/item_duty_userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/text_bg_stroke"
        />

</LinearLayout>